<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.muflone.bluewho</id>

  <name>BlueWho</name>
  <summary>Information and notification of new discovered bluetooth devices</summary>
  <description>
    <p>
      The scan will automatically detect any visible device and for each one
      that was detected a notification will be shown.
    </p>
    <p>
      Each device found will be saved on the list with its name, type, address
      and last seen date and time.
    </p>
  </description>

